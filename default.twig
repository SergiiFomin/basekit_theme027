{% extends "layout.twig" %}

{% block content %}

<div class="bg-glow">
    <div class="global">
        <!--top-->
        <div class="top">
            <div class="container">
                <div class="row">
                    <article class="span12">
                        {{widget('content', 'list', {content: '<ul class="top-list"><li><a href="#">Contact an Inspector</a></li><li><a href="#">Get the Zoning Manual</a></li><li><a href="#">Pay or View Invoice</a></li><li><a href="#">Get Clearance Handbook</a></li><li><a href="#">Mission</a></li></ul>', lines: 'all'})|raw}}
                    </article>
                </div>
            </div>
        </div>
        <!--header-->
        <header>
            <div class="header">
                <div class="container">
                    <div class="row">
                        <article class="span12">
                            <div class="row">
                                <article class="span6">
                                    {{widget('logo', 'name', {"defaultlogo": asset('images/logo.png')})|raw}}
                                </article>
                                <article class="span6">
                                    {{widget('content', 'topcontact', {content: '<div class="topcontact"><span class="phone">(800) 234-5678</span><br />8901 MARMORA ROAD, GLASGOW, D04 89GR</div>', lines: 'all'})|raw}}
                                </article>
                            </div>
                        </article>
                    </div>
                </div>
            </div>
        </header>
        <!--navigation-->
        <div class="navigation">
            <div class="container">
                <div class="row">
                    <article class="span12">
                        {{widget('extendednavigation', 'extendednavigation', {"align":"center"})|raw}}
                    </article>
                </div>
            </div>
        </div>
        <!--content-->
        <div class="container">
            <div class="row">
                <article class="span12">

                    {{zone('main')|raw}}

                </article>
            </div>
        </div>
        <!--footer-->
        <footer>
            <div class="container">
                <div class="row">
                    <section class="span12">
                        <div class="row">
                            <article class="span6">
                                {{widget('companyname', 'companyname', {"business": "Name"})|raw}}
                                {{widget('profile', 'copyright', { 'profileType':'copyright', 'copyright':'Â© Copyright 2014. All rights reserved'})|raw}}
                            </article>
                            <article class="span6">
                                {{widget('socialicons', 'socialicons', {'googleplus': 'https://plus.google.com', 'linkedin':'http://www.linkedin.com', 'facebook': 'https://www.facebook.com', 'twitter': 'https://twitter.com', 'youtube': 'https://www.youtube.com', 'rss': '#'})|raw}}
                            </article>
                        </div>
                    </section>
                </div>
            </div>
        </footer>
    </div>    
</div>

{% endblock %}